<?xml version="1.0" encoding="UTF-8"?>

<FeatureModel name="feature model for UTP" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="featureModel-schema.xsd">
    <!--Jardin zen (jardin japonais sec ou Karesansui) : Utilisation de pierres, de sable ou de gravier. Arbres taillés et mousses. Atmosphère minimaliste et méditative.-->
<Features>
    <Feature name="Jardin" mandatory="true" activate="true">
        <subFeature>
            <Feature name="Mobilier" optional="true" activate="true">
                <subFeature>
                    <subFeature type="OR">
                        <Feature name="Banc" activate="true" />
                        <Feature name="Pont" />
                        <Feature name="Terrasse" />
                        <Feature name="Fontaine" />
                    </subFeature>
                </subFeature>
            </Feature>
            <Feature name="Type_de_sol" optional="true" activate="true">
                <subFeature>
                    <subFeature type="OR">
                        <Feature name="Terre" />
                        <Feature name="Gazon" />
                        <Feature name="Gravier" activate="true" />
                        <Feature name="Sable" activate="true"/>
                    </subFeature>
                </subFeature>
            </Feature>
            <Feature name="Plantes" optional="true" >
                <subFeature>
                    <subFeature type="OR">
                        <Feature name="Arbres" >
                            <subFeature>
                                <subFeature type="OR">
                                    <Feature name="Fruitiers" >
                                        <subFeature>
                                            <Feature name="Pommiers" optional="true" />
                                            <Feature name="Cerisiers" optional="true" />
                                            <Feature name="Pruniers" optional="true" />
                                        </subFeature>
                                    </Feature>
                                    <Feature name="Ornementaux" >
                                        <subFeature>
                                            <Feature name="Feuillus" optional="true" />
                                            <Feature name="Pins" optional="true" />
                                            <Feature name="Buis" optional="true" />
                                        </subFeature>
                                    </Feature>
                                </subFeature>
                            </subFeature>
                        </Feature>
                        <Feature name="Fleurs">
                            <subFeature>
                                <subFeature type="OR">
                                    <Feature name="Roses" />
                                    <Feature name="Tulipes" />
                                    <Feature name="Marguerites" />
                                    <Feature name="Lavandes" />
                                </subFeature>
                            </subFeature>
                        </Feature>
                    </subFeature>
                </subFeature>
            </Feature>
            <Feature name="Éléments_d'eau" optional="true" >
                <subFeature>
                    <subFeature type="XOR">
                        <Feature name="Bassin" />
                        <Feature name="Étang" />
                        <Feature name="Cascade" />
                    </subFeature>
                </subFeature>
            </Feature>
        </subFeature>
    </Feature>
</Features>


</FeatureModel>
